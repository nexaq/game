@import "../../../styles/variables.module.pcss";

.form {
    display: flex;
    align-items: center;
}

.input {
    flex-grow: 1;
    min-width: 0;
    background-color: transparent;
    border: none;
    min-height: 15px;
    color: $white;
    font-size: rem(16);
    outline: none;
    font-family: $normal-font-family;
    padding: rem(21) rem(19);

    &::placeholder {
        color: rgba(255, 255, 255, 0.4);
    }

    &_error {
        border: 1px solid $danger;
    }
}