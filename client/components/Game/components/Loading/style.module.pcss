@import "../../../../styles/variables.module.pcss";

.loading {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    display: flex;
    z-index: 450;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: $white;
    font-weight: bold;
    font-size: rem(44);
    backdrop-filter: blur(5px);
}
