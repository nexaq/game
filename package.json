{
  "name": "game",
  "version": "1.0.0",
  "scripts": {
    "init": "npm install && npm run build:dev:vendors",
    "build": "npm run build:production",
    "dev": "better-npm-run dev",
    "build:production:vendors": "better-npm-run build:production:vendors",
    "build:production:client": "better-npm-run build:production:client",
    "build:production": "better-npm-run build:production",
    "watch:ssr": "better-npm-run watch:ssr",
    "start:dev": "NODE_PATH=./dist CFG_DIR=$(pwd)/dist/configs node dist/server/index.js",
    "start:prod": "cd /var/www/html && APP_VERSION=$(cat $(pwd)/.version) CFG_DIR=$(pwd)/dist/configs/ NODE_PATH=$(pwd)/dist node dist/server/index.js",
    "build:configs": "tsc --project configs",
    "build:server": "tsc --project server",
    "build:dev:vendors": "NODE_ENV=development webpack --mode=development --config webpack/config/vendors.config.ts",
    "build:ssr": "webpack --mode=production --config webpack/config/ssr.config.ts",
    "clean": "rm -rf dist && mkdir dist",
    "precommit": "npm-run-all lint tsc",
    "tsc": "node ./node_modules/.bin/tsc --noEmit",
    "lint": "npm-run-all lint:*",
    "lint:style": "npx stylelint './**/*.{css,scss}'",
    "lint:src": "npx eslint --ext=.ts,.tsx ./",
    "fix": "npm-run-all fix:lint:*",
    "fix:lint:src": "npx eslint --fix --ext=.ts,.tsx ./",
    "fix:lint:style": "npx stylelint './**/*.{css,scss}' --fix",
    "test": "npm-run-all lint:* test:*",
    "test:mocha": "echo \"Error: no test specified\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/compression-webpack-plugin": "^6.0.6",
    "@types/cookie-parser": "^1.4.2",
    "@types/duplicate-package-checker-webpack-plugin": "^2.1.2",
    "@types/express-rate-limit": "^5.1.3",
    "@types/htmlescape": "^1.1.1",
    "@types/lodash.flow": "^3.5.6",
    "@types/lodash.merge": "^4.6.6",
    "@types/mini-css-extract-plugin": "^2.2.0",
    "@types/node": "^15.14.9",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-helmet": "^6.1.2",
    "@types/react-loadable": "^5.5.6",
    "@types/webpack": "5.28.0",
    "@types/webpack-dev-middleware": "^5.0.2",
    "@types/webpack-dev-server": "^3.11.5",
    "@types/webpack-hot-middleware": "^2.25.5",
    "@types/webpack-node-externals": "^2.5.2",
    "better-npm-run": "^0.1.1",
    "compression-webpack-plugin": "^8.0.1",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "fork-ts-checker-webpack-plugin": "^6.3.2",
    "merge-options": "^3.0.4",
    "mini-css-extract-plugin": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "react-loadable": "^5.5.0",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.4",
    "webpack": "5.39.0",
    "webpack-cli": "4.7.2",
    "webpack-dev-server": "^4.0.0-rc.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@types/react-hot-loader": "^4.1.1",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-rate-limit": "^5.3.0",
    "helmet": "^4.6.0",
    "htmlescape": "^1.1.1",
    "lodash.flow": "^3.5.0",
    "lodash.merge": "^4.6.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-hot-loader": "^4.13.0"
  },
  "betterScripts": {
    "dev": {
      "command": "npm-run-all build:configs build:server && npm-run-all --parallel --print-name watch:ssr start:dev",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "watch:ssr": {
      "command": "webpack --watch --config webpack/config/ssr.config.ts",
      "env": {
        "NODE_ENV": "development"
      }
    }
  }
}
